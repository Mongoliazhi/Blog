<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <title>Mongolia</title>
  <link rel="shortcut icon" href="../images/M.png">
  <link rel="stylesheet" href="../stylesheets/index.css">
  <link rel="stylesheet" href="../or/swiper/swiper-3.4.1.min.css">
  <style>
    .swiper-container{
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: -1;
    }
    .swiper-wrapper{
      position: relative;
      width: 100%;
      height: 100%;
    }
    .swiper-slide{
      width: 100%;
      height:100%;
    }
    .swiper-slide img{
      width: 100%;
      height: 100%;
    }

    ::-webkit-input-placeholder { /* WebKit browsers */
      color:    #6CFFE4;
    }
    :-moz-placeholder { /* Mozilla Firefox 4 to 18 */
      color:    #6CFFE4;
      opacity:  1;
    }
    ::-moz-placeholder { /* Mozilla Firefox 19+ */
      color:    #6CFFE4;
      opacity:  1;
    }
    :-ms-input-placeholder { /* Internet Explorer 10+ */
      color:    #6CFFE4;
    }
  </style>
</head>
<body>
<div class="swiper-container">
  <div class="swiper-wrapper">
    <div class="swiper-slide">
      <img src="../images/bg1.jpg" alt="">
    </div>
    <div class="swiper-slide">
      <img src="../images/bg2.jpg" alt="">
    </div>
    <div class="swiper-slide">
      <img src="../images/bg3.jpg" alt="">
    </div>
  </div>
</div>
<div class="content">
  <header>
    <img class="header_img1" src="../images/mongolia.png" alt="">
    <ul class="header_ul">
      <!--<li><a href="#" style="opacity: 1">首页</a></li>-->
      <li><a href="/home">Blog</a></li>
      <li><a href="/my">关于我</a></li>
    </ul>
    <img class="header_img2"  src="../images/menu1.png" alt="">
  </header>
  <div class="homeFrom">
    <div class="bg_home"></div>
    <div class="con_home">
      <div class="home_header">
        <h1>Mongoliazhi个人网站</h1>
        <p>For uncle, for Aunt</p>
      </div>
      <div class="home">
        <input class="home_input" type="text" placeholder="" name="">
        <button class="home_btn">搜索</button>
      </div>
    </div>
    <div class="home_keyword">
      <span><a href="/study/studyList?val=react">React</a><i>/</i></span>
      <span><a href="/study/studyList?val=vue">Vue</a><i>/</i></span>
      <span><a href="/study/studyList?val=node">NodeJs</a></span>
    </div>
  </div>
  <div class="header_right">
    <div class="bg_header_right"></div>
    <ul class="header_right_ul">
      <li><img src="../images/home.png" alt=""><a href="/">首页</a></li>
      <li><img src="../images/blog.png" alt=""><a href="/home">Blog</a></li>
      <li><img src="../images/people.png" alt=""><a href="/my">关于我</a></li>
    </ul>
  </div>
</div>


<script src="../javascripts/jquery.min.js"></script>
<script src="../or/swiper/swiper-3.4.1.jquery.min.js"></script>
<script>
  $(function(){

    var mySwiper = new Swiper('.swiper-container', {

      autoplay: 6000,//可选选项，自动滑动
      autoplayDisableOnInteraction : false,
      keyboardControl : true,//现在键盘上的 < 和 > 可以控制Swiper
//      onInit: function(swiper){ //Swiper2.x的初始化是onFirstInit
//        swiperAnimateCache(swiper); //隐藏动画元素
//        swiperAnimate(swiper); //初始化完成开始动画
//      },
//      onSlideChangeEnd: function(swiper){
//        swiperAnimate(swiper); //每个slide切换结束时也运行当前slide动画
//      },
    })

//            右导航栏
    $(".header_img2").click(function(event){
      event.stopPropagation();
      $(".header_right").animate({
        right:'0'
      })
    })
    $(".content").click(function(){
      $(".header_right").animate({
        right:'-10rem'
      })
    })
    $(".header_right").click(function(event){
      event.stopPropagation();
    })


    $(".home_btn").click(function () {
        if($(".home_input").val()==""){
            $(".home_input").attr("placeholder","请输入您要搜索的内容");
        }else{
            let word = $(".home_input").val();
            window.location.href="/study/studyList?val="+word;
        }
    })
     
     function Keyword(val) {
        $.ajax({
            type: 'POST',
            url: "/Keyword",
            data:"val="+val,
            success: function(data){
                console.log(data)
                window.location.href="/study/studyList"
            }
        })
     } 
  })
</script>
</body>
</html>
